<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:weightSum="1">
	
		<TextView android:id="@+id/tvTitle" android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="Title" android:layout_width="match_parent"
			android:gravity="center" android:layout_margin="10dip"></TextView>
		<TextView android:id="@+id/tvText" android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content" android:text="Text" android:layout_margin="10dip"></TextView>
		<TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/textView1" android:text="Details" style="?android:attr/listSeparatorTextViewStyle"></TextView>
			

			<ListView android:layout_height="wrap_content" android:id="@+id/lvAlarmDetails"
				android:layout_width="match_parent" android:layout_weight="1" android:layout_marginLeft="10dip" android:layout_marginRight="10dip"></ListView>
			<LinearLayout android:id="@+id/llButtonBar" style="@android:style/ButtonBar"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="horizontal" android:background="#000000">
				<Button android:text="Akzeptieren" android:layout_height="60dip"
					android:id="@+id/btAccept" android:layout_weight="1" android:layout_width="0dp" android:background="@drawable/green_button" android:layout_margin="4dp"></Button>
				<Button android:layout_height="60dip" android:text="Ablehnen"
					android:id="@+id/btReject" android:layout_weight="1" android:layout_width="0dp" android:background="@drawable/red_button" android:layout_margin="4dp"></Button>
			<Button android:text="Einsatzstatus" android:layout_height="60dip" android:id="@+id/btSwitchToStatus" android:layout_weight="1" android:layout_width="0dp" android:visibility="gone"></Button>
		
					
			</LinearLayout>



</LinearLayout>
